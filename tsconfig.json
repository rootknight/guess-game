{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    ".next/types/**/*.ts",
    "app/ui/Header.tsx",
    "app/ui/TitleCard.tsx",
    "app/ui/MusicPlayer.tsx",
    "app/ui/SelectWords.tsx",
    "app/(home)/page.tsx",
    "app/game/page.tsx",
    "app/settlement/page.tsx"
  ],
  "exclude": ["node_modules"]
}
